---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import PageHero from "@/components/PageHero.astro";
import AnimatedSection from "@/components/AnimatedSection";
import heroImage from "@/assets/dispatcher.webp";
---

<BaseLayout title="Вакансия: Диспетчер | EUROPEGAZ" description="Вакансия диспетчера в EUROPEGAZ. Координация международных перевозок, работа с водителями и клиентами.">
  <Header />
  <PageHero title="Диспетчер" backgroundImage={heroImage} alt="Профессиональный диспетчер за работой" />
  <main class="mx-auto max-w-screen-xl px-4 py-16">
    <AnimatedSection client:visible variant="transparent">
      <h1 class="text-4xl font-bold tracking-tight sm:text-5xl mb-8">Диспетчер</h1>
      <p class="text-lg text-muted-foreground leading-relaxed mb-8">
        Эта страница‑заглушка. Подробное описание вакансии будет добавлено позже.
      </p>
      <a href="/careers" class="inline-flex items-center gap-2 px-4 py-2 border border-border rounded-lg hover:bg-accent transition-colors text-sm">
        ← К списку вакансий
      </a>
    </AnimatedSection>
  </main>
  <Footer />
</BaseLayout>
