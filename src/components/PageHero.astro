---
import hero2 from "@/assets/hero2.webp";
import { Image } from "astro:assets";

interface Props {
  title?: string;
  description?: string;
  showContent?: boolean;
}

const { title, description, showContent = false } = Astro.props;
---

<section class="relative bg-gray-100 text-white py-32 overflow-hidden min-h-[60vh]">
  <!-- Optimized background image with Astro -->
  <Image 
    src={hero2} 
    alt="EUROPEGAZ транспортная компания" 
    class="absolute inset-0 w-full h-full object-cover z-0"
    format="webp"
    quality={90}
    loading="eager"
    sizes="100vw"
    widths={[640, 768, 1024, 1280, 1536]}
  />
  
  {showContent && (
    <div class="relative mx-auto max-w-6xl px-4 z-20">
      {title && (
        <h1 class="text-4xl font-bold tracking-tight sm:text-5xl text-center mb-8">
          {title}
        </h1>
      )}
      {description && (
        <p class="text-xl text-center mb-8 max-w-3xl mx-auto text-blue-100">
          {description}
        </p>
      )}
    </div>
  )}
</section>
