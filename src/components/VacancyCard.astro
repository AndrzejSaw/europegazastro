---
import { Card, CardHeader, CardTitle, CardContent } from "./ui/card";
import { Button } from "./ui/button";
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

export interface Props {
  title: string;
  description: string;
  href: string;
  imageSrc: ImageMetadata;
  imageAlt: string;
}

const { title, description, href, imageSrc, imageAlt } = Astro.props;
---

<a 
  href={href} 
  class="block hover-lift"
>
  <Card className="h-full shadow-green hover:shadow-lg border-primary/20 hover:border-primary/40">
    <CardContent className="p-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Left Column (Image) -->
        <div class="md:col-span-1">
          <div class="aspect-[4/3] rounded-lg overflow-hidden border border-primary/10">
            <Image 
              src={imageSrc} 
              alt={imageAlt} 
              class="w-full h-full object-cover"
              format="webp"
              quality={80}
              loading="lazy"
            />
          </div>
        </div>

        <!-- Right Column (Content) -->
        <div class="md:col-span-2 flex flex-col justify-between">
          <div class="space-y-3">
            <CardTitle className="text-xl font-semibold leading-tight">
              {title}
            </CardTitle>
            <p class="text-muted-foreground leading-relaxed">
              {description}
            </p>
          </div>
          
          <div class="mt-4 pt-2">
            <Button variant="outline" size="sm" className="w-full md:w-auto">
              Подробнее
            </Button>
          </div>
        </div>
      </div>
    </CardContent>
  </Card>
</a>
