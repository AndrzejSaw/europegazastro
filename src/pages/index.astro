---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Hero from "@/components/Hero.astro";
import Stats from "@/components/Stats.astro";
import Features from "@/components/Features.astro";
import HiringProcess from "@/components/HiringProcess.astro";
import AboutSummary from "@/components/AboutSummary.astro";
import Cta from "@/components/Cta.astro";
import Faq from "@/components/Faq.astro";
import Testimonials from "@/components/Testimonials.astro";
import AnimatedSection from "@/components/AnimatedSection";
---

<BaseLayout title="Homepage | EUROPEGAZ">
	<Header />
	<main class="text-center">
		<AnimatedSection client:visible variant="transparent"><Hero /></AnimatedSection>
		<div class="mx-auto max-w-screen-xl px-2 sm:px-4 lg:px-6 py-6 sm:py-8">
			<AnimatedSection client:visible variant="light" padding="lg" delay={0.2}><Stats /></AnimatedSection>
			<AnimatedSection client:visible variant="green" padding="lg" delay={0.4}><Features /></AnimatedSection>
			<AnimatedSection client:visible variant="light" padding="lg" delay={0.6}><HiringProcess /></AnimatedSection>
			<AnimatedSection client:visible variant="green" padding="lg" delay={0.8}><AboutSummary /></AnimatedSection>
			<AnimatedSection client:visible variant="light" padding="lg" delay={1.0}><Faq /></AnimatedSection>
			<AnimatedSection client:visible variant="transparent" padding="lg" delay={1.1}><Testimonials /></AnimatedSection>
			<AnimatedSection client:visible variant="green" padding="lg" delay={1.2}><Cta /></AnimatedSection>
		</div>
	</main>
	<Footer />
</BaseLayout>
