---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Hero from "@/components/Hero.astro";
import Stats from "@/components/Stats.astro";
import Features from "@/components/Features.astro";
import HiringProcess from "@/components/HiringProcess.astro";
import AboutSummary from "@/components/AboutSummary.astro";
import Cta from "@/components/Cta.astro";
import Faq from "@/components/Faq.astro";
import AnimatedSection from "@/components/AnimatedSection";
---

<BaseLayout title="Homepage | EUROPEGAZ">
	<Header />
	<main class="mx-auto max-w-screen-xl px-4 py-16 text-center">
		<Hero />
		<AnimatedSection client:visible><Stats /></AnimatedSection>
		<AnimatedSection client:visible><Features /></AnimatedSection>
		<AnimatedSection client:visible><HiringProcess /></AnimatedSection>
		<AnimatedSection client:visible><AboutSummary /></AnimatedSection>
		<AnimatedSection client:visible><Faq /></AnimatedSection>
		<AnimatedSection client:visible><Cta /></AnimatedSection>
	</main>
	<Footer />
</BaseLayout>
