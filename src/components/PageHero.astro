---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
  title: string;
  backgroundImage: ImageMetadata;
  alt: string;
}

const { title, backgroundImage, alt } = Astro.props;
---

<section class="relative h-96 flex items-center justify-center overflow-hidden">
  <!-- Background Image -->
  <Image 
    src={backgroundImage} 
    alt={alt} 
    class="absolute inset-0 w-full h-full object-cover z-0"
    format="webp"
    quality={80}
    loading="eager"
  />
  
  <!-- Modern Gradient Overlay -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary/80 via-primary/60 to-secondary/40 z-10"></div>
  
  <!-- Animated Background Elements -->
  <div class="absolute top-10 left-10 w-32 h-32 bg-white/10 rounded-full blur-2xl animate-pulse z-10"></div>
  <div class="absolute bottom-10 right-10 w-24 h-24 bg-yellow-300/20 rounded-full blur-xl animate-pulse z-10" style="animation-delay: 1.5s;"></div>

  <!-- Title with Modern Typography -->
  <div class="relative z-20 text-center px-6 max-w-4xl">
    <h1 class="text-6xl md:text-7xl font-bold text-white tracking-tight leading-tight">
      <span class="block drop-shadow-2xl">{title}</span>
    </h1>
    <!-- Decorative line -->
    <div class="mt-6 mx-auto w-24 h-1 bg-gradient-to-r from-yellow-400 to-orange-400 rounded-full"></div>
      {title}
    </h1>
  </div>
</section>
