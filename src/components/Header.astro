---
import HeaderNav from "./HeaderNav";
import { Image } from "astro:assets";
import Logo from "@/assets/logo.svg";
---
<header class="border-b border-border bg-background/90 sticky top-0 z-50">
  <nav class="mx-auto flex max-w-screen-xl items-center justify-between px-4 py-4 sm:px-6 lg:px-8">
    <a href="/" class="flex items-center hover:scale-105 transition-transform duration-300">
      <Image
        src={Logo}
        alt="EUROPEGAZ"
        class="h-10 w-auto"
        loading="eager"
      />
    </a>

  <HeaderNav client:load />
  </nav>
</header>
