---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import PageHero from "@/components/PageHero.astro";
import AnimatedSection from "@/components/AnimatedSection.tsx";
import { Card, CardContent, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Phone, MessageSquare, Navigation, MapPin, Settings, CheckCircle, Building2, Truck, Container, Wrench, Fuel, Shield, Wifi } from "lucide-react";
import { Image } from "astro:assets";
import heroImage from "@/assets/hero2.webp";
import contactOfficeImage from "@/assets/contact-office.webp";
---

<BaseLayout title="Контакты | EUROPEGAZ">
	<Header />
	<PageHero title="Контакты" backgroundImage={heroImage} alt="Офис EUROPEGAZ и логистический центр" />
	<main class="px-2 sm:px-4 py-8 sm:py-16">
		<!-- Секция 1: Вступительный блок -->
		<AnimatedSection client:visible variant="light" padding="lg">
			<section class="mb-8 sm:mb-16 mx-auto max-w-screen-xl">
				<Card className="overflow-hidden">
					<div class="grid grid-cols-1 md:grid-cols-2 gap-0">
						<!-- Левая колонка: Контент -->
						<div class="p-3 sm:p-4 md:p-6 lg:p-8 xl:p-12 flex flex-col justify-center">
							<h2 class="text-xl sm:text-2xl md:text-3xl lg:text-4xl font-bold tracking-tight mb-4 sm:mb-6 lg:mb-8">
								Присоединяйтесь к нашей команде
							</h2>
							<p class="text-sm sm:text-base lg:text-lg text-muted-foreground leading-relaxed mb-3 sm:mb-4 lg:mb-6">
								Мы всегда рады новым сотрудникам! Если вас интересует работа в EUROPEGAZ, 
								пожалуйста, сначала ознакомьтесь с описанием вакансий на нашем сайте и отправьте заявку через форму.
							</p>
							<p class="text-sm sm:text-base lg:text-lg text-muted-foreground leading-relaxed mb-6 sm:mb-8">
								Это поможет нам лучше понять ваши профессиональные интересы и подобрать подходящую позицию. 
								Для экстренных вопросов или в крайних случаях вы можете использовать контактную информацию ниже.
							</p>
							<Button variant="link" className="text-base sm:text-lg self-start">
								<a href="/careers" class="flex items-center">
									→ Изучить вакансии и подать заявку
								</a>
							</Button>
						</div>
						<!-- Правая колонка: Изображение -->
						<div class="h-64 md:h-auto">
							<Image 
								src={contactOfficeImage} 
								alt="Главная база EUROPEGAZ в Осечной" 
								class="w-full h-full object-cover"
								format="webp"
								quality={80}
							/>
						</div>
					</div>
				</Card>
			</section>
		</AnimatedSection>

		<!-- Секция 2: Контактная информация -->
		<AnimatedSection client:visible variant="transparent">
			<section class="mb-8 sm:mb-16 mx-auto max-w-screen-xl">
				<Card className="max-w-6xl mx-auto">
					<CardContent className="p-3 sm:p-4 md:p-6 lg:p-8">
						<CardTitle className="text-xl sm:text-2xl lg:text-3xl mb-4 sm:mb-6 lg:mb-8 text-center text-gray-900">Главная база Euro-Pegaz</CardTitle>
						
						<!-- Описание базы -->
						<div class="text-center mb-4 sm:mb-6 lg:mb-8">
							<p class="text-sm sm:text-base lg:text-lg text-gray-700 max-w-3xl mx-auto">
								Наш современный логистический центр в Оседне является центральным хубом всех операций. 
								Здесь базируется наш флот из 150+ автомобилей и 265 прицепов, а также работает опытная команда диспетчеров и механиков.
							</p>
						</div>

						<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6 lg:gap-8 mb-4 sm:mb-6 lg:mb-8">
							<!-- Адрес и контакты -->
							<div class="lg:col-span-1">
								<div class="bg-gray-50 p-3 sm:p-4 lg:p-6 rounded-lg h-full">
									<h3 class="font-semibold text-gray-900 mb-4 text-lg flex items-center">
										<MapPin className="h-5 w-5 mr-2 text-[#007e57]" />
										Адрес и контакты
									</h3>
									<div class="space-y-4">
										<div>
											<p class="font-medium text-gray-900 mb-1">Адрес:</p>
											<p class="text-gray-700">Centrum logistyczne Osieczna<br/>64-113 Osieczna k. Leszna<br/>ul. Łoniewska 1</p>
										</div>
										<div>
											<p class="font-medium text-gray-900 mb-2">Контакты:</p>
											<div class="space-y-2">
												<div class="flex items-center">
													<Phone className="h-4 w-4 mr-2" />
													<span class="text-gray-700">+48 509 717 619</span>
												</div>
												<div class="flex items-center">
													<MessageSquare className="h-4 w-4 mr-2" />
													<span class="text-gray-700">biuro@europegaz.eu</span>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>

							<!-- Инфраструктура -->
							<div class="lg:col-span-2">
								<div class="bg-gray-50 p-3 sm:p-4 lg:p-6 rounded-lg h-full">
									<h3 class="font-semibold text-gray-900 mb-4 text-lg flex items-center">
										<Building2 className="h-5 w-5 mr-2 text-[#007e57]" />
										Инфраструктура базы
									</h3>
									<div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
										<div class="space-y-3">
											<div class="flex items-center">
												<Truck className="h-4 w-4 mr-2 text-[#007e57]" />
												<span class="text-sm text-gray-700">150+ грузовых автомобилей</span>
											</div>
											<div class="flex items-center">
												<Container className="h-4 w-4 mr-2 text-[#007e57]" />
												<span class="text-sm text-gray-700">265 специализированных прицепов</span>
											</div>
											<div class="flex items-center">
												<Wrench className="h-4 w-4 mr-2 text-[#007e57]" />
												<span class="text-sm text-gray-700">Современная мастерская</span>
											</div>
										</div>
										<div class="space-y-3">
											<div class="flex items-center">
												<Fuel className="h-4 w-4 mr-2 text-[#007e57]" />
												<span class="text-sm text-gray-700">Собственная АЗС</span>
											</div>
											<div class="flex items-center">
												<Shield className="h-4 w-4 mr-2 text-[#007e57]" />
												<span class="text-sm text-gray-700">Охраняемая территория</span>
											</div>
											<div class="flex items-center">
												<Wifi className="h-4 w-4 mr-2 text-[#007e57]" />
												<span class="text-sm text-gray-700">Цифровая диспетчерская</span>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</CardContent>
				</Card>
			</section>
		</AnimatedSection>

		<!-- Секция 3: Google карта -->
		<AnimatedSection client:visible variant="light">
			<section class="mb-8 sm:mb-16 mx-auto max-w-screen-xl">
				<Card className="overflow-hidden">
					<CardContent className="p-3 sm:p-4 md:p-6 lg:p-8">
						<CardTitle className="text-xl sm:text-2xl lg:text-3xl mb-4 sm:mb-6 lg:mb-8 text-center text-gray-900">Как нас найти</CardTitle>
						<div class="w-full h-64 sm:h-80 lg:h-96 rounded-lg overflow-hidden shadow-lg">
							<iframe 
								src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2430.8966445728157!2d16.42789031570707!3d52.04158847972639!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47045b5a4f5a4a4b%3A0x8a8a8a8a8a8a8a8a!2s%C5%81oniewska%201%2C%2064-113%20Osieczna%2C%20Poland!5e0!3m2!1sen!2sus!4v1640995200000!5m2!1sen!2sus"
								width="100%"
								height="100%"
								style="border:0;"
								allowfullscreen=""
								loading="lazy"
								referrerpolicy="no-referrer-when-downgrade"
								title="Местоположение EUROPEGAZ в Осечной">
							</iframe>
						</div>
						<div class="mt-4 text-center">
							<p class="text-sm sm:text-base text-gray-600">
								Centrum logistyczne Osieczna, ul. Łoniewska 1, 64-113 Osieczna k. Leszna
							</p>
						</div>
					</CardContent>
				</Card>
			</section>
		</AnimatedSection>
	</main>
	<Footer />
</BaseLayout>
