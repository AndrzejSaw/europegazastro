---
import { Button } from "./ui/button";
---
<section class="py-24 sm:py-32">
  <div class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8">
    <div class="rounded-2xl gradient-hero relative overflow-hidden p-8 sm:p-12 flex flex-col items-center text-center">
      <!-- Overlay for better text readability -->
      <div class="absolute inset-0 bg-gradient-to-br from-black/20 via-transparent to-black/10"></div>
      
      <!-- Animated background elements -->
      <div class="absolute top-4 right-4 w-24 h-24 bg-white/10 rounded-full blur-xl animate-pulse"></div>
      <div class="absolute bottom-4 left-4 w-16 h-16 bg-yellow-300/20 rounded-full blur-lg animate-pulse" style="animation-delay: 1s;"></div>
      
      <div class="relative z-10">
        <h2 class="text-3xl font-bold tracking-tight sm:text-4xl text-white">
          Ready to Move Your Business Forward?
        </h2>
        <p class="mt-3 max-w-2xl text-white/90 text-lg">
          Contact us today for a free quote and discover how our logistics solutions can benefit you.
        </p>
        <Button size="lg" className="mt-6 bg-white text-primary hover:bg-white/90 shadow-xl">
          Request a Quote
        </Button>
      </div>
    </div>
  </div>
</section>
