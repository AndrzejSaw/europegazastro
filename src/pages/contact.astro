---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import PageHero from "@/components/PageHero.astro";
import AnimatedSection from "@/components/AnimatedSection.tsx";
import { Card, CardContent, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Phone, MessageSquare, Navigation, MapPin, Settings, CheckCircle, Building2, Truck, Container, Wrench, Fuel, Shield, Wifi } from "lucide-react";
import { Image } from "astro:assets";
import heroImage from "@/assets/hero2.webp";
import contactOfficeImage from "@/assets/contact-office.webp";
---

<BaseLayout title="Контакты | EUROPEGAZ">
	<Header />
	<PageHero title="Контакты" backgroundImage={heroImage} alt="Офис EUROPEGAZ и логистический центр" />
	<main class="mx-auto max-w-screen-xl px-4 py-16">
		<!-- Секция 1: Вступительный текст с изображением -->
		<AnimatedSection client:visible variant="light" padding="lg">
			<section class="mb-16">
				<Card className="overflow-hidden">
					<div class="grid grid-cols-1 md:grid-cols-2 gap-0">
						<!-- Левая колонка: Контент -->
						<div class="p-8 md:p-12 flex flex-col justify-center">
							<h2 class="text-3xl font-bold tracking-tight sm:text-4xl mb-8">
								Свяжитесь с нами
							</h2>
							<p class="text-lg text-muted-foreground leading-relaxed mb-6">
								Мы всегда рады новым специалистам в нашей команде. Все открытые вакансии и подробные требования вы можете найти на нашей странице 'Карьера'. Если вас заинтересовала конкретная позиция, пожалуйста, отправляйте анкету непосредственно со страницы с ее описанием.
							</p>
							<Button variant="link" className="text-lg self-start">
								<a href="/careers">Посмотреть открытые вакансии</a>
							</Button>
							<p class="text-lg text-muted-foreground leading-relaxed mt-6">
								Если у вас остались общие вопросы, вы можете связаться с нами любым удобным способом, указанным ниже.
							</p>
						</div>
						<!-- Правая колонка: Изображение -->
						<div class="h-64 md:h-auto">
							<Image 
								src={contactOfficeImage} 
								alt="Главная база EUROPEGAZ в Осечной" 
								class="w-full h-full object-cover"
								format="webp"
								quality={80}
							/>
						</div>
					</div>
				</Card>
			</section>
		</AnimatedSection>

		<!-- Секция 2: Контактная информация -->
		<AnimatedSection client:visible variant="transparent">
			<section class="mb-16">
				<Card className="max-w-6xl mx-auto">
					<CardContent className="p-8">
						<CardTitle className="text-3xl mb-8 text-center text-gray-900">Главная база Euro-Pegaz</CardTitle>
						
						<!-- Описание базы -->
						<div class="text-center mb-8">
							<p class="text-lg text-gray-700 max-w-3xl mx-auto">
								Наш современный логистический центр в Оседне является центральным хабом всех операций. 
								Здесь базируется наш флот из 150+ автомобилей и 265 прицепов, а также работает опытная команда диспетчеров и механиков.
							</p>
						</div>

						<div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
							<!-- Адрес и контакты -->
							<div class="lg:col-span-1">
								<div class="bg-gray-50 p-6 rounded-lg h-full">
									<h3 class="font-semibold text-gray-900 mb-4 text-lg flex items-center">
										<MapPin className="h-5 w-5 mr-2 text-[#007e57]" />
										Адрес и контакты
									</h3>
									<div class="space-y-4">
										<div>
											<p class="font-medium text-gray-900 mb-1">Адрес:</p>
											<p class="text-gray-700">Centrum logistyczne Osieczna<br/>64-113 Osieczna k. Leszna<br/>ul. Łoniewska 1</p>
										</div>
										
										<div>
											<p class="font-medium text-gray-900 mb-1">Часы работы:</p>
											<p class="text-gray-700">8:00 - 16:00 (Пн-Пт)<br/>Экстренная связь: 24/7</p>
										</div>

										<div>
											<p class="font-medium text-gray-900 mb-3">Связь:</p>
											<div class="space-y-2">
												<a href="tel:+48509717619" class="flex items-center text-blue-700 hover:text-blue-800 transition-colors">
													<Phone className="h-4 w-4 mr-2" />
													+48 509 717 619
												</a>
												<a href="viber://chat?number=%2B48509717619" class="flex items-center text-[#eeba4b] hover:text-[#d4a935] transition-colors">
													<MessageSquare className="h-4 w-4 mr-2" />
													Viber
												</a>
												<a href="https://wa.me/48509717619" class="flex items-center text-[#007e57] hover:text-green-700 transition-colors">
													<Navigation className="h-4 w-4 mr-2" />
													WhatsApp
												</a>
											</div>
										</div>
									</div>
								</div>
							</div>

							<!-- Услуги на базе -->
							<div class="lg:col-span-1">
								<div class="bg-blue-50 p-6 rounded-lg h-full">
									<h3 class="font-semibold text-gray-900 mb-4 text-lg flex items-center">
										<Settings className="h-5 w-5 mr-2 text-blue-700" />
										Услуги на базе
									</h3>
									<ul class="space-y-3">
										<li class="flex items-center text-gray-700">
											<CheckCircle className="h-4 w-4 mr-2 text-[#007e57]" />
											Техническое обслуживание
										</li>
										<li class="flex items-center text-gray-700">
											<CheckCircle className="h-4 w-4 mr-2 text-[#007e57]" />
											Диспетчерская служба 24/7
										</li>
										<li class="flex items-center text-gray-700">
											<CheckCircle className="h-4 w-4 mr-2 text-[#007e57]" />
											Парковка для водителей
										</li>
										<li class="flex items-center text-gray-700">
											<CheckCircle className="h-4 w-4 mr-2 text-[#007e57]" />
											Оформление документов
										</li>
										<li class="flex items-center text-gray-700">
											<CheckCircle className="h-4 w-4 mr-2 text-[#007e57]" />
											Консультации по визам
										</li>
										<li class="flex items-center text-gray-700">
											<CheckCircle className="h-4 w-4 mr-2 text-[#007e57]" />
											Отдел кадров
										</li>
									</ul>
								</div>
							</div>

							<!-- Инфраструктура -->
							<div class="lg:col-span-1">
								<div class="bg-green-50 p-6 rounded-lg h-full">
									<h3 class="font-semibold text-gray-900 mb-4 text-lg flex items-center">
										<Building2 className="h-5 w-5 mr-2 text-[#eeba4b]" />
										Инфраструктура
									</h3>
									<ul class="space-y-3">
										<li class="flex items-center text-gray-700">
											<Truck className="h-4 w-4 mr-2 text-slate-600" />
											150+ грузовых автомобилей
										</li>
										<li class="flex items-center text-gray-700">
											<Container className="h-4 w-4 mr-2 text-slate-600" />
											265 прицепов разных типов
										</li>
										<li class="flex items-center text-gray-700">
											<Wrench className="h-4 w-4 mr-2 text-slate-600" />
											Собственная мастерская
										</li>
										<li class="flex items-center text-gray-700">
											<Fuel className="h-4 w-4 mr-2 text-slate-600" />
											Заправочная станция
										</li>
										<li class="flex items-center text-gray-700">
											<Shield className="h-4 w-4 mr-2 text-slate-600" />
											Охраняемая территория
										</li>
										<li class="flex items-center text-gray-700">
											<Wifi className="h-4 w-4 mr-2 text-slate-600" />
											Wi-Fi для водителей
										</li>
									</ul>
								</div>
							</div>
						</div>

						
					</CardContent>
				</Card>
			</section>
		</AnimatedSection>

		<!-- Секция 3: Карта Google -->
		<AnimatedSection client:visible>
			<section class="text-center">
				<h2 class="text-3xl font-bold tracking-tight sm:text-4xl mb-8">
					Мы на карте
				</h2>
				
				<div class="max-w-4xl mx-auto">
					<iframe 
						src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2438.7239058752647!2d16.418999815758398!3d52.29583737978469!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47045b6e5f5a5a5f%3A0x5f5a5a5f5a5a5a5f!2s%C5%81oniewska%201%2C%2064-113%20Osieczna%2C%20Poland!5e0!3m2!1sen!2sus!4v1629872400000!5m2!1sen!2sus"
						class="w-full h-96 rounded-lg border-0"
						allowfullscreen=""
						loading="lazy"
						referrerpolicy="no-referrer-when-downgrade">
					</iframe>
				</div>
			</section>
		</AnimatedSection>
	</main>
	<Footer />
</BaseLayout>
