---
import { Button } from "./ui/button";
import { Image } from "astro:assets";
import HeroImage from "@/assets/hero.webp";
---
<section class="relative overflow-hidden bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-gray-100/60 via-background to-background px-4 py-16 sm:px-6 lg:px-8">
  <!-- Background shapes -->
  <div class="absolute -top-24 -left-24 w-96 h-96 bg-primary rounded-full blur-3xl opacity-20 -z-10"></div>
  <div class="absolute -bottom-24 -right-24 w-96 h-96 bg-secondary rounded-full blur-3xl opacity-10 -z-10"></div>
  
  <div class="mx-auto grid max-w-screen-xl grid-cols-1 items-center gap-8 md:grid-cols-2">
    <!-- Left column -->
    <div>
      <h1 class="text-4xl font-bold tracking-tight sm:text-5xl">
        Reliable Transport Solutions for Your Business
      </h1>
      <p class="mt-4 text-muted-foreground">
        We provide timely and secure cargo delivery across Europe, leveraging a modern fleet and professional drivers.
      </p>
      <div class="mt-6 flex flex-wrap items-center gap-3">
        <Button>
          Our Services
        </Button>
        <Button variant="secondary">
          Become a Driver
        </Button>
      </div>
    </div>

    <!-- Right column (hero image) -->
    <Image
      src={HeroImage}
      alt="A modern EUROPEGAZ truck on the highway"
      loading="eager"
      class="rounded-lg shadow-lg"
    />
  </div>
</section>
