---
import { Button } from "./ui/button";
import { Image } from "astro:assets";
import HeroImage from "@/assets/hero.webp";
---
<section class="relative overflow-hidden gradient-hero px-4 py-20 sm:px-6 lg:px-8">
  <!-- Overlay for better text readability -->
  <div class="absolute inset-0 bg-gradient-to-br from-black/30 via-black/10 to-transparent"></div>
  
  <!-- Background animated shapes -->
  <div class="absolute -top-24 -left-24 w-96 h-96 bg-white/20 rounded-full blur-3xl opacity-30 animate-pulse -z-10"></div>
  <div class="absolute -bottom-24 -right-24 w-96 h-96 bg-white/10 rounded-full blur-3xl opacity-20 animate-pulse -z-10" style="animation-delay: 1s;"></div>
  
  <div class="relative mx-auto grid max-w-screen-xl grid-cols-1 items-center gap-12 md:grid-cols-2">
    <!-- Left column -->
    <div class="text-white">
      <h1 class="text-5xl font-bold tracking-tight leading-tight sm:text-6xl lg:text-7xl">
        <span class="block">Reliable</span>
        <span class="block text-gradient-secondary text-yellow-300">Transport</span>
        <span class="block">Solutions</span>
      </h1>
      <p class="mt-6 text-xl text-white/90 leading-relaxed">
        We provide timely and secure cargo delivery across Europe, leveraging a modern fleet and professional drivers.
      </p>
      <div class="mt-8 flex flex-wrap items-center gap-4">
        <Button size="lg" className="bg-white text-primary hover:bg-white/90 shadow-xl">
          Our Services
        </Button>
        <Button variant="outline" size="lg" className="border-white/30 text-white hover:bg-white/10 backdrop-blur-sm">
          Become a Driver
        </Button>
      </div>
    </div>

    <!-- Right column (hero image) -->
    <Image
      src={HeroImage}
      alt="A modern EUROPEGAZ truck on the highway"
      loading="eager"
      class="rounded-lg shadow-lg"
    />
  </div>
</section>
