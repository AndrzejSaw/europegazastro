---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
  title: string;
  backgroundImage: ImageMetadata;
  alt: string;
}

const { title, backgroundImage, alt } = Astro.props;
---

<section class="relative h-96 flex items-center justify-center overflow-hidden">
  <!-- Background Image -->
  <Image 
    src={backgroundImage} 
    alt={alt} 
    class="absolute inset-0 w-full h-full object-cover z-0"
    format="webp"
    quality={80}
    loading="eager"
  />
  
  <!-- Dark Overlay -->
  <div class="absolute inset-0 bg-black/20 z-10"></div>

  <!-- Content -->
  <div class="relative z-20 text-center px-6 max-w-4xl">
    <p class="text-white/80 mb-4">Главная / {title}</p>
    <h1 class="text-5xl font-bold text-white tracking-tight leading-tight">
      {title}
    </h1>
  </div>
</section>
